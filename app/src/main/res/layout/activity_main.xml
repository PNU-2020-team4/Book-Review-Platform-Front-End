<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#212121"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/app_name" />
                <TextView
                    android:id="@+id/main_title_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/mainTheme"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/main_title"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="." />
                <androidx.cardview.widget.CardView
                    android:id="@+id/main_user_profile_card"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/main_user_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_user"
                        android:layout_gravity="center"
                        android:contentDescription="@string/contentDescription" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/main_search"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape"
                    android:elevation="6dp"
                    android:gravity="fill"
                    android:text="@string/search_text"
                    android:drawableEnd="@drawable/ic_search"
                    app:layout_constraintEnd_toEndOf="@+id/main_user_profile_card"
                    app:layout_constraintStart_toStartOf="@+id/main_title"
                    app:layout_constraintTop_toBottomOf="@+id/main_title" />
                <TextView
                    android:id="@+id/main_best_seller_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/best_seller"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/main_search"
                    app:layout_constraintTop_toBottomOf="@+id/main_search"
                    app:layout_constraintBottom_toTopOf="@+id/main_best_seller_image"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    />
                <ImageView
                    android:id="@+id/main_best_seller_image"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:elevation="10dp"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/main_best_seller_text"
                    app:layout_constraintStart_toStartOf="@+id/main_best_seller_text"
                    app:layout_constraintBottom_toBottomOf="@+id/main_popular_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:contentDescription="@string/contentDescription" />
                <TextView
                    android:id="@+id/main_best_seller_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="책 제목"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@+id/main_best_seller_image"
                    app:layout_constraintTop_toTopOf="@+id/main_best_seller_image"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/main_best_seller_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/author"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@+id/main_best_seller_image"
                    app:layout_constraintTop_toBottomOf="@+id/main_best_seller_title"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    />
                <RatingBar
                    android:id="@+id/main_best_seller_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="0"
                    android:progressBackgroundTint="@android:color/black"
                    android:progressTint="@android:color/holo_orange_light"
                    app:layout_constraintTop_toBottomOf="@+id/main_best_seller_author"
                    app:layout_constraintStart_toEndOf="@+id/main_best_seller_image"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="7dp"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    />
                <TextView
                    android:id="@+id/main_best_seller_review_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="375"
                    app:layout_constraintTop_toBottomOf="@+id/main_best_seller_star"
                    app:layout_constraintStart_toEndOf="@+id/main_best_seller_image"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="25dp"
                    />
                <TextView
                    android:id="@+id/main_best_seller_review_number_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="reviews"
                    app:layout_constraintTop_toBottomOf="@+id/main_best_seller_star"
                    app:layout_constraintStart_toEndOf="@+id/main_best_seller_review_number"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="5dp"
                    />
                <ImageView
                    android:id="@+id/main_best_seller_editor_choice"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:src="@drawable/editorschoice"
                    app:layout_constraintTop_toBottomOf="@+id/main_best_seller_review_number"
                    app:layout_constraintStart_toEndOf="@+id/main_best_seller_image"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="25dp"
                    android:background="@color/white"
                    android:contentDescription="@string/contentDescription" />
                <TextView
                    android:id="@+id/main_popular_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/popular"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/main_search"
                    app:layout_constraintTop_toBottomOf="@+id/main_best_seller_image"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:id="@+id/main_popular_text_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_all"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_best_seller_image"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_popular_recycler"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_popular_text_more"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    tools:listitem="@layout/popular_item"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
                <TextView
                    android:id="@+id/main_popular_quote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/daily_quote"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/main_search"
                    app:layout_constraintTop_toBottomOf="@+id/main_popular_recycler"
                    />
                <ImageView
                    android:id="@+id/main_best_seller_quote_image"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/quote_mark"
                    app:layout_constraintTop_toBottomOf="@+id/main_popular_quote"
                    app:layout_constraintStart_toStartOf="@+id/main_popular_quote"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/contentDescription" />
                <TextView
                    android:id="@+id/main_best_seller_quote_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:text="좋은 책을 읽는다는 것은 과거의 훌륭한 사람들과 대화하는 것이다."
                    android:textColor="@color/black"
                    android:lineSpacingExtra="5dp"
                    app:layout_constraintStart_toStartOf="@+id/main_popular_quote"
                    app:layout_constraintTop_toBottomOf="@+id/main_best_seller_quote_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/main_best_seller_quote_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="데카르트"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/main_popular_quote"
                    app:layout_constraintTop_toBottomOf="@+id/main_best_seller_quote_content"
                    android:layout_marginTop="10dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
            </androidx.viewpager2.widget.ViewPager2>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
