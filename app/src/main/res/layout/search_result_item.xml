<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true">
    <ImageView
        android:id="@+id/searchResultImage"
        android:layout_width="55dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:contentDescription="표지" />
    <TextView
        android:id="@+id/searchResultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/searchResultImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="책 제목"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_on_secondary"
        />
    <TextView
        android:id="@+id/searchResultAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/searchResultTitle"
        app:layout_constraintStart_toEndOf="@+id/searchResultImage"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="책 저자"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/searchResultPublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/searchResultAuthor"
        app:layout_constraintStart_toEndOf="@+id/searchResultImage"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="책 출판사"
        android:textSize="12sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>