<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/my_page_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_button_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>
    <ImageButton
        android:id="@+id/my_page_logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_logout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/my_page_guideline_hor_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/my_page_profile_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        android:elevation="7dp"
        android:background="@drawable/shape_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_page_guideline_hor_1">
        <ImageView
            android:id="@+id/my_page_user_image"
            android:layout_width="133dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/ic_user" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/my_page_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/my_page_profile_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="17dp"
        />
    <TextView
        android:id="@+id/my_page_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="absd234@naver.com"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/my_page_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="7dp"
        android:textColor="@color/grey_trans"
        />
    <View
        android:id="@+id/my_page_separate_line_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey_trans_2"
        app:layout_constraintTop_toBottomOf="@id/my_page_user_email"
        android:layout_marginVertical="20dp"
        />
    <TextView
        android:id="@+id/my_page_activity_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 활동"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/my_page_separate_line_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/grey_trans"
        />
    <LinearLayout
        android:id="@+id/my_page_activity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/my_page_activity_layout"
        android:layout_marginTop="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_my_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/my_page_my_review_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="20dp"
                android:src="@drawable/ic_review"
                />
            <TextView
                android:id="@+id/my_page_my_review_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 작성한 리뷰"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/my_page_my_review_image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/my_page_my_review_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지금까지 작성하신 리뷰를 확인하세요."
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_page_my_review_image"
                app:layout_constraintTop_toBottomOf="@+id/my_page_my_review_title"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="20dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/my_page_separate_line_2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@color/grey_trans_2"
            app:layout_constraintTop_toBottomOf="@id/my_page_user_email"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_my_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/my_page_my_comment_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="20dp"
                android:src="@drawable/ic_comment"
                />
            <TextView
                android:id="@+id/my_page_my_comment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 작성한 댓글"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/my_page_my_comment_image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/my_page_my_comment_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지금까지 작성하신 댓글을 확인하세요."
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_page_my_comment_image"
                app:layout_constraintTop_toBottomOf="@+id/my_page_my_comment_title"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="20dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/my_page_separate_line_3"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@color/grey_trans_2"
            app:layout_constraintTop_toBottomOf="@id/my_page_user_email"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_my_scrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/my_page_my_scrap_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="20dp"
                android:src="@drawable/ic_bookmark"
                />
            <TextView
                android:id="@+id/my_page_my_scrap_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스크랩 목록"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/my_page_my_scrap_image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/my_page_my_scrap_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지금까지 스크랩한 도서 목록을 확인하세요."
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/my_page_my_scrap_image"
                app:layout_constraintTop_toBottomOf="@+id/my_page_my_scrap_title"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="20dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>